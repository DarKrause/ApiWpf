<Page x:Class="MachineDrinks.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MachineDrinks.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="129*"></ColumnDefinition>
            <ColumnDefinition Width="671*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center">
            <Button FontSize="23" Margin="0 0 0 10" Height="50" x:Name="BtnCoin" Click="BtnCoin_Click" Content="Монеты" Cursor="Hand"/>
            <Button FontSize="23" Margin="0 0 0 10" Height="50" x:Name="BtnDrinks" Click="BtnDrinks_Click" Content="Напитки"/>
            <Button FontSize="23" Height="50" x:Name="BtnOtchet" Click="BtnOtchet_Click" Content="Отчёт" Cursor="Hand"/>
        </StackPanel>
        <Frame Grid.Column="1" x:Name="MainFrm" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Page>
