<Page x:Class="MachineDrinks.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MachineDrinks.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="MainPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="BtnUser" Click="BtnUser_Click" Height="50" FontSize="29">Пользователь</Button>
            <Separator Height="20" Visibility="Hidden"/>
            <Button Click="BtnAdmin_Click" x:Name="BtnAdmin" Height="50" FontSize="29" Cursor="Hand">Администратор</Button>
            <Separator Height="20" Visibility="Hidden"/>
            <TextBox x:Name="TbKod" Height="50" FontSize="25" TextAlignment="Center"></TextBox>
        </StackPanel>
    </Grid>
</Page>
